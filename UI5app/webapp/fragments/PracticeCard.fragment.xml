<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.f" xmlns:card="sap.f.cards" xmlns:core="sap.ui.core">
    <f:Card class="sapUiMediumMargin" width="300px">
        <f:header>
            <card:Header title="{practice>/name}" subtitle="{practice>/description}" iconSrc="sap-icon://laptop" />
        </f:header>
        <f:content>
            <VBox height="115px" class="sapUiSmallMargin" justifyContent="SpaceBetween">
                <FlexBox alignItems="Start">
                    <Text text="{i18n>STATUS}">
                        <layoutData>
                            <FlexItemData growFactor="9" />
                        </layoutData>
                    </Text>
                    <Text text="{practice>/status}">
                        <layoutData>
                            <FlexItemData growFactor="0.2" />
                        </layoutData>
                    </Text>
                    <core:Icon/>
                </FlexBox>
                <FlexBox alignItems="Start">
                    <Text text="{i18n>PLAYERS}">
                        <layoutData>
                            <FlexItemData growFactor="9" />
                        </layoutData>
                    </Text>
                    <Text text="{practice>/playerCount}">
                        <layoutData>
                            <FlexItemData growFactor="0.2" />
                        </layoutData>
                    </Text>
                </FlexBox>
                <FlexBox alignItems="Start">
                    <Text text="{i18n>MAP}">
                        <layoutData>
                            <FlexItemData growFactor="9" />
                        </layoutData>
                    </Text>
                    <Text text="{practice>/map}">
                        <layoutData>
                            <FlexItemData growFactor="0.2" />
                        </layoutData>
                    </Text>
                </FlexBox>
                <HBox alignItems="Center" class="sapUiSmallMargin">
                    <Button text="{i18n>RESTART}" width="100%">
                        <layoutData>
                            <FlexItemData growFactor="1" />
                        </layoutData>
                    </Button>
                    <Button text="{i18n>UPDATE}" width="100%">
                        <layoutData>
                            <FlexItemData growFactor="1" alignSelf="End" />
                        </layoutData>
                    </Button>
                </HBox>
            </VBox>
        </f:content>
    </f:Card>
</core:FragmentDefinition>