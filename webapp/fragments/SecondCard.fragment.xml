<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.f" xmlns:card="sap.f.cards" xmlns:core="sap.ui.core">
    <f:Card class="sapUiMediumMargin" width="300px">
        <f:header>
            <card:Header title="Second server" subtitle="Whatever this will be" iconSrc="sap-icon://laptop" />
        </f:header>
        <f:content>
            <VBox height="115px" class="sapUiSmallMargin" justifyContent="SpaceBetween">
                <FlexBox alignItems="Start">
                    <Text text="Status">
                        <layoutData>
                            <FlexItemData growFactor="9" />
                        </layoutData>
                    </Text>
                    <Text text="Down">
                        <layoutData>
                            <FlexItemData growFactor="0.2" />
                        </layoutData>
                    </Text>
                    <core:Icon src="sap-icon://arrow-bottom" color="Negative"></core:Icon>
                </FlexBox>
                <FlexBox alignItems="Start">
                    <Text text="Players">
                        <layoutData>
                            <FlexItemData growFactor="9" />
                        </layoutData>
                    </Text>
                    <Text text="0/32">
                        <layoutData>
                            <FlexItemData growFactor="0.2" />
                        </layoutData>
                    </Text>
                </FlexBox>
                <FlexBox alignItems="Start">
                    <Text text="Current map">
                        <layoutData>
                            <FlexItemData growFactor="9" />
                        </layoutData>
                    </Text>
                    <Text text="null">
                        <layoutData>
                            <FlexItemData growFactor="0.2" />
                        </layoutData>
                    </Text>
                </FlexBox>
                <HBox alignItems="Center" class="sapUiSmallMargin">
                    <Button text="Start" width="100%">
                        <layoutData>
                            <FlexItemData growFactor="1" />
                        </layoutData>
                    </Button>
                    <Button text="Force Update" width="100%">
                        <layoutData>
                            <FlexItemData growFactor="1" alignSelf="End" />
                        </layoutData>
                    </Button>
                </HBox>
            </VBox>
        </f:content>
    </f:Card>
</core:FragmentDefinition>